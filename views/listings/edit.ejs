
    <% layout("/layouts/boilerplate")%>
    <div class="row">
        <div class="col-8 offset-2">
    <title>Airbnb</title>
</head>
<body>
    <br>
    <h3>Edit your Listing </h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" 
        novalidate 
        class="needs-validation"
        enctype="multipart/form-data"
        >

    <div class="mb-3">
        <label for="title" class="form-label fw-bold">Title</label>
        <input name = "listing[title]" value="<%= listing.title %>" type = " text " class="form-control"required/>
      <div class="valid-feedback">
       Title looks good!
    </div>
    </div>

    <div  class="mb-3">
        <label for="description" class="form-label fw-bold">Description</label>
        <input name = "listing[description]" value="<%= listing.description %> " class="form-control"required/> 
     <div class="invalid-feedback">
        Please enter a short description!
      </div>
    </div>
    

     <div  class="mb-3">
        <b>Original Listing Image</b><br/>
       <img src="<%= originalImageUrl %> %>" alt="listing image" class="listing-img">

     </div>

    <div  class="mb-3">
        <label for="image" class="form-label fw-bold"> New Image</label>
        <input name = "listing[image]"
         type = "file" 
         class="form-control"/>
    </div>
        
    <div  class="mb-3">
        <label for="price" class="form-label fw-bold">Price</label>
        <input name = "listing[price]" value="<%=listing.price %>" type = "number" class="form-control"required/>
    <div class="invalid-feedback">
        Please enter a valid price!
      </div>
    </div>
       
    <div class="row">
    <div  class="mb-3 col-md-4">
        <label for="country" class="form-label fw-bold">Country</label>
         <input name = "listing[country]" value="<%= listing.country %>"type = " text "class="form-control"required/>
    <div class="invalid-feedback">
        Country should be valid!
      </div>
        </div>
        
    <div  class="mb-3 col-md-8" >
         <label for="location" class="form-label fw-bold">Location</label>
         <input name = "listing[location]" value="<%= listing.location %>" type = " text "class="form-control"required/>
    <div class="invalid-feedback">
        Location should be valid!
      </div>
        </div>
    </div>
<br>
     <button class="btn btn-dark edit-btn">Edit</button>
     <br><br>
    </form>
    </div>
    </div>
   
</body>
</html>
